---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import {
    Mail,
    Sparkles,
    Heart,
    Calendar,
    User,
    ArrowRight,
} from "lucide-astro";
import { posts } from "../data/blog-posts";

const featuredIssues = [
    {
        title: "Will AI Make Learning Joyful Or Just Convenient?",
        excerpt:
            "You've probably used AI to look something up this week. But here's the question that kept us up at night: Are you learning or just getting answers?",
        date: "Feb 20, 2026",
        author: "EK Soch Team",
        category: "Technology",
        image: "https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e?w=800&q=80",
        externalUrl:
            "https://niirmaangrowthhub.substack.com/p/will-ai-make-learning-joyful-or-just",
    },
    {
        title: "It's not about working faster—it's about thinking differently.",
        excerpt:
            "AI isn't just a productivity tool—it's rewiring how entrepreneurs think, plan, and adapt. Here is what most people are missing.",
        date: "Feb 12, 2026",
        author: "EK Soch Team",
        category: "Mindset",
        image: "https://images.unsplash.com/photo-1499750310107-5fef28a66643?w=800&q=80",
        externalUrl:
            "https://niirmaangrowthhub.substack.com/p/its-not-about-working-fasterits-about",
    },
    {
        title: "The Orange Revolution: Why Every Business Owner Must Become a Content Creator in 2026",
        excerpt:
            "India's ₹34B Creator Economy + Budget 2026: Your Blueprint to Turn Visibility Into Revenue",
        date: "Feb 6, 2026",
        author: "EK Soch Team",
        category: "Business Growth",
        image: "https://images.unsplash.com/photo-1557838923-2985c318be48?w=800&q=80",
        externalUrl:
            "https://niirmaangrowthhub.substack.com/p/the-orange-revolution-why-every-business",
    },
];
---

<Layout title="Newsletter | Ek Soch">
    <Navbar />

    <main class="pt-24">
        <!-- Past Issues / Featured Insights Grid -->
        <section class="section bg-deep-black">
            <div class="container">
                <div class="text-center mb-16">
                    <p class="eyebrow fade-in">Recent Newsletters</p>
                    <h2
                        class="text-4xl md:text-5xl font-serif text-off-white mt-4 fade-in"
                    >
                        Featured <span class="text-gold">Insights</span>
                    </h2>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
                    {
                        featuredIssues.map((post) => (
                            <article class="blog-card group flex flex-col items-start bg-charcoal/20 border border-soft-grey/10 rounded-2xl overflow-hidden hover:border-gold/30 transition-all duration-500 fade-in">
                                <div class="aspect-[16/10] w-full overflow-hidden relative">
                                    <img
                                        src={post.image}
                                        alt={post.title}
                                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
                                </div>

                                <div class="p-8 flex flex-col flex-grow">
                                    <div class="flex items-center gap-3 mb-4 text-soft-grey text-xs">
                                        <span class="flex items-center gap-1.5 underline decoration-gold/30">
                                            <User class="w-3.5 h-3.5" />
                                            {post.author}
                                        </span>
                                        <span>•</span>
                                        <span class="flex items-center gap-1.5">
                                            <Calendar class="w-3.5 h-3.5" />
                                            {post.date}
                                        </span>
                                    </div>

                                    <h3 class="text-xl font-serif text-off-white mb-4 leading-snug group-hover:text-gold transition-colors">
                                        {post.title}
                                    </h3>

                                    <p class="text-soft-grey text-sm leading-relaxed mb-6 flex-grow">
                                        {post.excerpt}
                                    </p>

                                    <a
                                        href={
                                            (post as any).externalUrl ||
                                            `/blog/${(post as any).slug}`
                                        }
                                        target={
                                            (post as any).externalUrl
                                                ? "_blank"
                                                : "_self"
                                        }
                                        class="inline-flex items-center gap-2 text-gold text-xs font-bold uppercase tracking-widest group/link"
                                    >
                                        Read More
                                        <ArrowRight class="w-4 h-4 group-hover/link:translate-x-1.5 transition-transform" />
                                    </a>
                                </div>
                            </article>
                        ))
                    }
                </div>

                <div class="text-center mt-12 fade-in">
                    <a
                        href="https://niirmaangrowthhub.substack.com/"
                        target="_blank"
                        class="btn-primary">Explore All Insights</a
                    >
                </div>
            </div>
        </section>

        <!-- Hero Section / Join Our Newsletter -->
        <section
            class="section bg-charcoal/10 border-y border-soft-grey/10 relative overflow-hidden"
        >
            <!-- Background elements -->
            <div
                class="absolute inset-0 bg-gradient-to-b from-gold/5 to-transparent"
            >
            </div>
            <div
                class="absolute -top-24 -right-24 w-96 h-96 bg-gold/10 rounded-full blur-3xl opacity-50"
            >
            </div>

            <div class="container relative z-10">
                <div class="max-w-4xl mx-auto text-center">
                    <div
                        class="inline-flex items-center gap-2 px-4 py-2 bg-gold/10 border border-gold/20 rounded-full text-gold text-xs font-bold uppercase tracking-widest mb-8 fade-up"
                    >
                        <Sparkles class="w-4 h-4" />
                        Built for Changemakers
                    </div>

                    <h2
                        class="text-4xl md:text-6xl font-serif text-off-white fade-up"
                    >
                        Join Our <span class="text-gold">Newsletter</span>
                    </h2>

                    <p
                        class="text-soft-grey text-xl mt-8 leading-relaxed max-w-2xl mx-auto fade-up"
                    >
                        Join 10,000+ changemakers for weekly insights,
                        storytelling tips, and exclusive episode updates from
                        the Ek Soch movements.
                    </p>

                    <!-- Custom Newsletter Signup Layout -->
                    <div class="mt-16 max-w-2xl mx-auto fade-up">
                        <div class="relative group">
                            <!-- Background glow for the form -->
                            <div
                                class="absolute -inset-1 bg-gradient-to-r from-gold/30 to-gold/10 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"
                            >
                            </div>

                            <form
                                action="https://niirmaangrowthhub.substack.com/subscribe"
                                method="GET"
                                target="_blank"
                                class="relative flex flex-col md:flex-row gap-4 p-2 bg-charcoal/40 backdrop-blur-xl border border-soft-grey/10 rounded-2xl overflow-hidden"
                            >
                                <input
                                    type="email"
                                    name="email"
                                    placeholder="Enter your email address"
                                    required
                                    class="flex-grow bg-transparent px-6 py-4 text-off-white placeholder:text-soft-grey/50 focus:outline-none focus:ring-1 focus:ring-gold/30 rounded-xl transition-all"
                                />
                                <button
                                    type="submit"
                                    class="btn-primary whitespace-nowrap px-8 py-4 justify-center"
                                >
                                    Join the Movement
                                </button>
                            </form>
                        </div>

                        <div
                            class="mt-8 flex flex-wrap items-center justify-center gap-6 text-sm text-soft-grey/60"
                        >
                            <span class="flex items-center gap-2">
                                <Heart class="w-4 h-4 text-gold/60" />
                                10,000+ Changemakers
                            </span>
                            <span
                                class="w-1 h-1 bg-soft-grey/30 rounded-full hidden sm:block"
                            ></span>
                            <span>No spam, just pure inspiration.</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Subscribe Section -->
        <section class="section bg-charcoal/30">
            <div class="container">
                <div class="grid md:grid-cols-3 gap-12">
                    <div class="text-center space-y-4 fade-in">
                        <div
                            class="w-16 h-16 bg-gold/10 rounded-2xl flex items-center justify-center mx-auto mb-6"
                        >
                            <Mail class="w-8 h-8 text-gold" />
                        </div>
                        <h3 class="text-2xl font-serif text-off-white">
                            Weekly Insights
                        </h3>
                        <p class="text-soft-grey">
                            Get curated thoughts on storytelling and personal
                            branding delivered to your inbox.
                        </p>
                    </div>

                    <div class="text-center space-y-4 fade-in">
                        <div
                            class="w-16 h-16 bg-gold/10 rounded-2xl flex items-center justify-center mx-auto mb-6"
                        >
                            <Sparkles class="w-8 h-8 text-gold" />
                        </div>
                        <h3 class="text-2xl font-serif text-off-white">
                            Exclusive Content
                        </h3>
                        <p class="text-soft-grey">
                            Access behind-the-scenes stories and early-bird
                            updates on new podcast episodes.
                        </p>
                    </div>

                    <div class="text-center space-y-4 fade-in">
                        <div
                            class="w-16 h-16 bg-gold/10 rounded-2xl flex items-center justify-center mx-auto mb-6"
                        >
                            <Heart class="w-8 h-8 text-gold" />
                        </div>
                        <h3 class="text-2xl font-serif text-off-white">
                            Community First
                        </h3>
                        <p class="text-soft-grey">
                            Join a movement of changemakers who are shaping the
                            future of India.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const gsap = (window as any).gsap;
        const ScrollTrigger = (window as any).ScrollTrigger;

        if (!gsap) return;

        // Animations
        gsap.fromTo(
            ".fade-up",
            { y: 30, opacity: 0 },
            {
                y: 0,
                opacity: 1,
                duration: 0.8,
                stagger: 0.15,
                ease: "power3.out",
                delay: 0.2,
            },
        );

        gsap.fromTo(
            ".fade-in",
            { y: 20, opacity: 0 },
            {
                y: 0,
                opacity: 1,
                duration: 0.6,
                stagger: 0.1,
                ease: "power2.out",
                scrollTrigger: {
                    trigger: ".fade-in",
                    start: "top 85%",
                },
            },
        );
    });
</script>
