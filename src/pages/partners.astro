---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import {
  BookOpen,
  Lightbulb,
  Heart,
  Crown,
  Globe,
  Mic,
  Users,
  FileText,
  Building,
  ArrowRight,
  Mail,
} from "lucide-astro";
---

<Layout title="Partners & Sponsors | Ek Soch">
  <Navbar />

  <main>
    <!-- Hero -->
    <section class="min-h-screen flex items-center pt-32 pb-16 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-gold/5 to-transparent">
      </div>
      <div class="container relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Left: Text Content -->
          <div>
            <p class="eyebrow fade-up">Collaborate With Us</p>
            <h1 class="headline fade-up mt-4">
              Partner With <span class="text-gold">Ek Soch</span>
            </h1>
            <p class="text-soft-grey text-xl mt-8 leading-relaxed fade-up">
              We collaborate with brands, institutions, and communities to
              create meaningful campaigns that resonate and inspire.
            </p>
            <div class="mt-10 fade-up">
              <a
                href="https://calendly.com/niralepandya/30min?back=1&month=2026-02"
                class="btn-primary"
              >
                Become a Partner
              </a>
            </div>
          </div>

          <!-- Right: Images -->
          <div class="hero-images relative">
            <!-- Main Image -->
            <div class="relative aspect-[4/5] overflow-hidden rounded">
              <img
                src="https://images.unsplash.com/photo-1557804506-669a67965ba0?w=800&q=80"
                alt="Professional partnership"
                class="w-full h-full object-cover"
                loading="eager"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-charcoal/60 to-transparent"
              >
              </div>
            </div>

            <!-- Floating accent image -->
            <div
              class="absolute -bottom-6 -left-6 w-40 h-40 overflow-hidden rounded border-4 border-charcoal hidden lg:block"
            >
              <img
                src="https://images.unsplash.com/photo-1556761175-b413da4baf72?w=400&q=80"
                alt="Strategy meeting"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>

            <!-- Decorative elements -->
            <div
              class="absolute -top-4 -right-4 w-24 h-24 border border-gold/30 rounded hidden lg:block"
            >
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Who Should Partner -->
    <section class="section bg-deep-black">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <div class="partner-content space-y-6">
            <p class="eyebrow">Ideal Partners</p>
            <h2 class="text-4xl md:text-5xl font-serif text-off-white">
              Who Should Partner With Ek Soch
            </h2>
            <p class="text-soft-grey text-lg">Brands focused on:</p>
          </div>

          <div class="partner-cards space-y-4">
            <div
              class="partner-card flex items-center gap-4 p-6 bg-charcoal border-l-2 border-gold"
            >
              <BookOpen class="w-6 h-6 text-gold flex-shrink-0" />
              <p class="text-lg text-off-white">Education & learning</p>
            </div>
            <div
              class="partner-card flex items-center gap-4 p-6 bg-charcoal border-l-2 border-gold"
            >
              <Lightbulb class="w-6 h-6 text-gold flex-shrink-0" />
              <p class="text-lg text-off-white">
                Entrepreneurship & innovation
              </p>
            </div>
            <div
              class="partner-card flex items-center gap-4 p-6 bg-charcoal border-l-2 border-gold"
            >
              <Heart class="w-6 h-6 text-gold flex-shrink-0" />
              <p class="text-lg text-off-white">Women empowerment</p>
            </div>
            <div
              class="partner-card flex items-center gap-4 p-6 bg-charcoal border-l-2 border-gold"
            >
              <Crown class="w-6 h-6 text-gold flex-shrink-0" />
              <p class="text-lg text-off-white">Leadership & culture</p>
            </div>
            <div
              class="partner-card flex items-center gap-4 p-6 bg-charcoal border-l-2 border-gold"
            >
              <Globe class="w-6 h-6 text-gold flex-shrink-0" />
              <p class="text-lg text-off-white">Social impact</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Partnership Opportunities -->
    <section class="section">
      <div class="container">
        <div class="text-center mb-16">
          <p class="eyebrow">Partnership Opportunities</p>
          <h2 class="text-4xl md:text-5xl font-serif text-off-white mt-4">
            Grow Together With <span class="text-gold">Purpose</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            [
              {
                title: "Sponsored Episodes",
                icon: Mic,
                description:
                  "Associate your brand with deep, meaningful conversations.",
                image:
                  "https://images.unsplash.com/photo-1590602847861-f357a9332bbc?w=400&q=80",
              },
              {
                title: "Brand Integrations",
                icon: Lightbulb,
                description:
                  "Seamlessly integrate your message into our creative ecosystem.",
                image:
                  "https://images.unsplash.com/photo-1557838923-2985c318be48?w=400&q=80",
              },
              {
                title: "Events & Workshops",
                icon: Users,
                description:
                  "Co-host impactful physical or digital learning experiences.",
                image:
                  "https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=400&q=80",
              },
              {
                title: "Co-Creation Projects",
                icon: Building,
                description:
                  "Build custom content or initiatives that drive long-term value.",
                image:
                  "https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=400&q=80",
              },
            ].map((item) => (
              <div class="opportunity-card group relative overflow-hidden bg-charcoal/30 border border-soft-grey/10 rounded-3xl hover:border-gold/30 transition-all duration-500">
                <div class="aspect-square relative overflow-hidden">
                  <img
                    src={item.image}
                    alt={item.title}
                    class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 opacity-40 group-hover:opacity-60"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-charcoal via-charcoal/20 to-transparent" />
                  <div class="absolute bottom-6 left-6 right-6">
                    <div class="w-12 h-12 bg-gold/20 backdrop-blur-md rounded-xl flex items-center justify-center mb-4">
                      <item.icon class="w-6 h-6 text-gold" />
                    </div>
                  </div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-serif text-off-white mb-2 group-hover:text-gold transition-colors">
                    {item.title}
                  </h3>
                  <p class="text-soft-grey text-sm leading-relaxed">
                    {item.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      id="contact-section"
      class="section bg-deep-black overflow-hidden relative"
    >
      <div class="absolute inset-x-0 bottom-0 h-1 bg-gold"></div>
      <div class="container">
        <div class="max-w-4xl mx-auto text-center cta-section">
          <p class="eyebrow">Let’s scale together</p>
          <h2 class="text-4xl md:text-5xl font-serif text-off-white mt-4">
            Let’s Grow <span class="text-gold">Together</span>
          </h2>
          <p
            class="text-soft-grey text-lg mt-6 max-w-2xl mx-auto leading-relaxed"
          >
            Partner with a platform that values depth, meaning, and lasting
            engagement. We're ready to build something remarkable with you.
          </p>

          <div class="mt-12 flex justify-center">
            <a
              href="https://calendly.com/niralepandya/30min?back=1&month=2026-02"
              class="btn-primary px-12 py-5 text-lg"
            >
              Become a Partner
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const gsap = (window as any).gsap;
    const ScrollTrigger = (window as any).ScrollTrigger;

    if (!gsap) return;

    // Hero animation
    gsap.fromTo(
      ".fade-up",
      { y: 30, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.15,
        ease: "power3.out",
        delay: 0.3,
      },
    );

    // Partner content
    gsap.fromTo(
      ".partner-content > *",
      { x: -30, opacity: 0 },
      {
        x: 0,
        opacity: 1,
        duration: 0.6,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: { trigger: ".partner-content", start: "top 80%" },
      },
    );

    // Partner cards
    gsap.fromTo(
      ".partner-card",
      { x: 30, opacity: 0 },
      {
        x: 0,
        opacity: 1,
        duration: 0.5,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: { trigger: ".partner-cards", start: "top 80%" },
      },
    );

    // Opportunity cards
    gsap.fromTo(
      ".opportunity-card",
      { y: 40, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 0.6,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: { trigger: ".opportunity-card", start: "top 85%" },
      },
    );

    // CTA section
    gsap.fromTo(
      ".cta-section > *",
      { y: 30, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 0.6,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: { trigger: ".cta-section", start: "top 80%" },
      },
    );

    // Contact form
    gsap.fromTo(
      ".contact-form",
      { y: 40, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: { trigger: ".contact-form", start: "top 85%" },
      },
    );
  });
</script>
