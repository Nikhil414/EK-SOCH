  <Footer />
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const gsap = (window as any).gsap;
    const ScrollTrigger = (window as any).ScrollTrigger;

    if (!gsap || !ScrollTrigger) return;

    // Fade up animations
    const fadeUps = document.querySelectorAll(".fade-up");
    if (fadeUps.length > 0) {
      gsap.fromTo(
        fadeUps,
        { y: 30, opacity: 0 },
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          stagger: 0.15,
          ease: "power3.out",
          delay: 0.3,
        },
      );
    }

    // Standard section transitions
    const sections = [
      "founder-image",
      "founder-content",
      "serve-card",
      "offer-card",
      "video-card",
    ];

    sections.forEach((cls) => {
      const elements = document.querySelectorAll(`.${cls}`);
      if (elements.length > 0) {
        gsap.fromTo(
          elements,
          { y: 40, opacity: 0 },
          {
            y: 0,
            opacity: 1,
            duration: 0.8,
            stagger: 0.1,
            ease: "power2.out",
            scrollTrigger: {
              trigger: elements[0],
              start: "top 85%",
            },
          },
        );
      }
    });

    ScrollTrigger.refresh();
  });
</script>
