  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const gsap = (window as any).gsap;
    const ScrollTrigger = (window as any).ScrollTrigger;

    if (!gsap) return;

    // Hero animation
    gsap.fromTo(
      ".fade-up",
      { y: 30, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.15,
        ease: "power3.out",
        delay: 0.3,
      },
    );

    // Service sections
    document.querySelectorAll(".service-content").forEach((el, i) => {
      gsap.fromTo(
        el.querySelectorAll("*"),
        { y: 30, opacity: 0 },
        {
          y: 0,
          opacity: 1,
          duration: 0.6,
          stagger: 0.08,
          ease: "power2.out",
          scrollTrigger: { trigger: el, start: "top 80%" },
        },
      );
    });

    // Format cards
    gsap.fromTo(
      ".format-card",
      { x: 30, opacity: 0 },
      {
        x: 0,
        opacity: 1,
        duration: 0.5,
        stagger: 0.1,
        ease: "power2.out",
        scrollTrigger: { trigger: ".format-card", start: "top 85%" },
      },
    );

    // Service images
    gsap.fromTo(
      ".service-image",
      { x: 50, opacity: 0 },
      {
        x: 0,
        opacity: 1,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: { trigger: ".service-image", start: "top 80%" },
      },
    );
  });
</script>
