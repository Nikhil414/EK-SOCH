---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import {
  CheckCircle,
  Target,
  Rocket,
  Shield,
  Users,
  Star,
  Zap,
} from "lucide-astro";
---

<Layout title="About | Ek Soch">
  <Navbar />

  <main>
    <!-- HERO: About Ek Soch -->
    <section class="min-h-screen flex items-center pt-32 pb-16 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-gold/5 to-transparent">
      </div>
      <div class="container relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <!-- Left: Image -->
          <div class="hero-image-container relative order-2 lg:order-1">
            <div
              class="relative aspect-[4/5] overflow-hidden rounded-2xl border border-soft-grey/10 shadow-2xl"
            >
              <img
                src="/images/New_candid_photo.jpeg"
                alt="Ek Soch Founder"
                class="w-full h-full object-cover"
                loading="eager"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-charcoal/40 to-transparent"
              >
              </div>
            </div>

            <!-- Decorative elements -->
            <div
              class="absolute -bottom-4 -right-4 w-24 h-24 border border-gold/30 rounded-xl hidden lg:block"
            >
            </div>
            <div
              class="absolute -top-4 -left-4 w-16 h-16 bg-gold/10 rounded-full hidden lg:block"
            >
            </div>
          </div>

          <!-- Right: Text Content -->
          <div class="order-1 lg:order-2">
            <p class="eyebrow fade-up text-2xl md:text-3xl">About Ek Soch</p>
            <h1 class="headline fade-up mt-4">
              Amplify Your <br />
              <span class="text-gold">Meaningful Voice</span>
            </h1>
            <div
              class="space-y-6 text-soft-grey text-lg mt-8 leading-relaxed fade-up"
            >
              <p>
                Ek Soch is a thought-leadership and storytelling platform
                founded to amplify meaningful voices across India and beyond.
              </p>
              <p>
                We believe stories have the power to inspire action, build
                confidence, and create social impact. Through podcasts,
                training, and branding, we help individuals transform ideas into
                influence.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- VISION & MISSION -->
    <section class="section bg-deep-black overflow-hidden px-4 md:px-0">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
          <!-- Vision -->
          <div
            class="vision-box p-10 md:p-16 bg-charcoal/30 rounded-[2rem] border border-soft-grey/10 relative group hover:border-gold/30 transition-all"
          >
            <div
              class="w-16 h-16 bg-gold/10 rounded-2xl flex items-center justify-center mb-8"
            >
              <Target class="w-8 h-8 text-gold" />
            </div>
            <p class="eyebrow mb-4">Our Vision</p>
            <h2
              class="text-3xl md:text-4xl font-serif text-off-white leading-tight"
            >
              To become Indiaâ€™s most trusted platform for authentic
              conversations and conscious leadership.
            </h2>
          </div>

          <!-- Mission -->
          <div
            class="mission-box p-10 md:p-16 bg-charcoal/30 rounded-[2rem] border border-soft-grey/10 relative group hover:border-gold/30 transition-all"
          >
            <div
              class="w-16 h-16 bg-gold/10 rounded-2xl flex items-center justify-center mb-8"
            >
              <Rocket class="w-8 h-8 text-gold" />
            </div>
            <p class="eyebrow mb-4">Our Mission</p>
            <ul class="space-y-4">
              {
                [
                  "Empower voices",
                  "Build thought leaders",
                  "Create meaningful impact",
                  "Support personal branding",
                ].map((item) => (
                  <li class="flex items-center gap-4 text-xl text-off-white font-serif">
                    <div class="w-2 h-2 rounded-full bg-gold" />
                    {item}
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- OUR VALUES -->
    <section class="section bg-deep-black">
      <div class="container">
        <div class="text-center mb-16">
          <p class="eyebrow">The Foundation</p>
          <h2 class="text-4xl md:text-5xl font-serif text-off-white mt-4">
            Our Values
          </h2>
        </div>

        <div class="flex flex-wrap justify-center gap-8">
          {
            [
              { name: "Authenticity", icon: Shield },
              { name: "Purpose", icon: Target },
              { name: "Excellence", icon: Star },
              { name: "Integrity", icon: Zap },
              { name: "Community", icon: Users },
            ].map((value) => (
              <div class="value-card p-12 bg-charcoal/20 border border-soft-grey/10 rounded-2xl text-center group hover:border-gold/30 transition-all min-h-[300px] flex flex-col justify-center items-center w-full md:w-[calc(50%-2rem)] lg:w-[calc(33.33%-2rem)] max-w-[400px]">
                <div class="w-20 h-20 bg-gold/5 rounded-full flex items-center justify-center mx-auto mb-8 group-hover:bg-gold/10 transition-colors">
                  <value.icon class="w-10 h-10 text-gold" />
                </div>
                <h3 class="text-2xl text-off-white font-medium tracking-wide">
                  {value.name}
                </h3>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="section bg-deep-black border-t border-soft-grey/10">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-serif text-off-white">
            Ready to Share Your Story?
          </h2>
          <p class="text-soft-grey text-lg mt-6">
            Join the movement of meaningful conversations and build your stage
            today.
          </p>
          <div class="mt-10">
            <a
              href="https://calendly.com/niralepandya/book-your-slot-ek-soch-with-nirale-pandya-clone?back=1&month=2026-02"
              class="btn-primary"
            >
              Book Your Podcast
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const gsap = (window as any).gsap;
    const ScrollTrigger = (window as any).ScrollTrigger;

    if (!gsap || !ScrollTrigger) return;

    // Hero animation
    gsap.fromTo(
      ".fade-up",
      { y: 30, opacity: 0 },
      {
        y: 0,
        opacity: 1,
        duration: 0.8,
        stagger: 0.15,
        ease: "power3.out",
        delay: 0.3,
      },
    );

    // Box transitions
    const sections = ["vision-box", "mission-box", "value-card"];

    sections.forEach((cls) => {
      const elements = document.querySelectorAll(`.${cls}`);
      if (elements.length > 0) {
        gsap.fromTo(
          elements,
          { y: 40, opacity: 0 },
          {
            y: 0,
            opacity: 1,
            duration: 0.8,
            stagger: 0.1,
            ease: "power2.out",
            scrollTrigger: {
              trigger: elements[0],
              start: "top 85%",
            },
          },
        );
      }
    });

    ScrollTrigger.refresh();
  });
</script>
