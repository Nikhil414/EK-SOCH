---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import FeaturedEpisode from "../components/FeaturedEpisode.astro";
import {
    Mic,
    Headphones,
    ArrowRight,
    Play,
    Youtube,
    Radio,
} from "lucide-astro";
---

<Layout title="Podcast | Ek Soch - Conversations That Matter">
    <Navbar />

    <main>
        <!-- Hero Section -->
        <section
            class="min-h-[60vh] flex items-center pt-32 pb-16 relative overflow-hidden"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-charcoal via-charcoal to-gold/10 -z-10"
            >
            </div>

            <div class="container">
                <div class="max-w-4xl">
                    <p class="eyebrow fade-up">Ek Soch Podcast</p>
                    <h1 class="headline fade-up">
                        Conversations That <span class="text-gold"
                            >Stay With You</span
                        >
                    </h1>
                    <p
                        class="text-soft-grey text-xl mt-8 leading-relaxed fade-up max-w-2xl"
                    >
                        The Ek Soch Podcast features inspiring conversations
                        with entrepreneurs, leaders, artists, and changemakers.
                        Each episode explores real journeys, failures, lessons,
                        and breakthroughs.
                    </p>

                    <div class="flex flex-wrap gap-6 mt-10 fade-up">
                        <a
                            href="https://www.youtube.com/@niralepandya"
                            target="_blank"
                            class="btn-primary flex items-center gap-2"
                        >
                            <Youtube class="w-5 h-5" />
                            Subscribe on YouTube
                        </a>
                        <!-- <div
                            class="flex items-center gap-4 px-6 py-3 border border-soft-grey/20 rounded-full"
                        >
                            <span
                                class="text-soft-grey text-sm uppercase tracking-widest font-semibold"
                                >Also on:</span
                            >
                            <div class="flex gap-4">
                                <Headphones
                                    class="w-5 h-5 text-gold"
                                    title="Spotify"
                                />
                                <Radio
                                    class="w-5 h-5 text-gold"
                                    title="Apple Podcasts"
                                />
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
        </section>

        <!-- Latest Episode -->
        <FeaturedEpisode
            label="Featured Episode"
            title="How to Build a Powerful Movement from Scratch"
            description="In this episode, we explore the fundamental principles of building community, creating impact, and turning a simple idea into a movement that matters."
            embedUrl="https://www.youtube.com/embed/__1ncK_wfWk"
        />

        <!-- Why Join Our Podcast? -->
        <section class="section border-y border-soft-grey/10 overflow-hidden">
            <div class="container">
                <div class="grid lg:grid-cols-2 gap-16 items-center">
                    <div class="order-2 lg:order-1 relative">
                        <div
                            class="aspect-[4/5] rounded-3xl overflow-hidden border border-soft-grey/20 relative group"
                        >
                            <img
                                src="https://images.unsplash.com/photo-1598488035139-bdbb2231ce04?w=800&q=80"
                                alt="Professional Studio Setup"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-charcoal/80 via-transparent to-transparent"
                            >
                            </div>
                            <div class="absolute bottom-8 left-8">
                                <p class="text-gold font-serif italic text-xl">
                                    "Professionalism meets Purpose."
                                </p>
                            </div>
                        </div>
                        <!-- Decorative element -->
                        <div
                            class="absolute -top-6 -left-6 w-24 h-24 border-t-2 border-l-2 border-gold/30 rounded-tl-3xl -z-10"
                        >
                        </div>
                        <div
                            class="absolute -bottom-6 -right-6 w-24 h-24 border-b-2 border-r-2 border-gold/30 rounded-br-3xl -z-10"
                        >
                        </div>
                    </div>

                    <div class="order-1 lg:order-2 space-y-8">
                        <p class="eyebrow">For Creators & Leaders</p>
                        <h2
                            class="text-4xl md:text-5xl font-serif text-off-white leading-tight"
                        >
                            Why Join Our <span class="text-gold">Podcast?</span>
                        </h2>
                        <p class="text-soft-grey text-lg leading-relaxed">
                            We don't just record conversations; we amplify
                            movements. When you join the Ek Soch Podcast, you
                            get access to a world-class platform designed to
                            showcase your story in the best light.
                        </p>

                        <div class="grid sm:grid-cols-2 gap-6">
                            {
                                [
                                    "Professional studio setup",
                                    "High-quality editing",
                                    "Promotion support",
                                    "Brand visibility",
                                    "Long-term reach",
                                ].map((benefit) => (
                                    <div class="flex items-center gap-3">
                                        <div class="flex-shrink-0 w-6 h-6 bg-gold/20 rounded-full flex items-center justify-center">
                                            <svg
                                                class="w-3 h-3 text-gold"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                                stroke-width="4"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    d="M5 13l4 4L19 7"
                                                />
                                            </svg>
                                        </div>
                                        <span class="text-off-white font-medium">
                                            {benefit}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>

                        <div class="pt-4">
                            <a
                                href="https://calendly.com/niralepandya/book-your-slot-ek-soch-with-nirale-pandya-clone?back=1&month=2026-02"
                                class="btn-primary">Become a Guest</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Guest Application -->
        <section class="section border-t border-soft-grey/10">
            <div class="container">
                <div class="grid lg:grid-cols-2 gap-16 items-center">
                    <div class="space-y-8">
                        <p class="eyebrow">Be Our Guest</p>
                        <h2
                            class="text-4xl md:text-5xl font-serif text-off-white leading-tight"
                        >
                            Apply as a <span class="text-gold">Guest</span>
                        </h2>
                        <p class="text-soft-grey text-lg leading-relaxed">
                            Share your story with the world. We're always
                            looking for authentic voices and powerful stories.
                            If you have a journey that can inspire others, we
                            want to hear from you.
                        </p>
                        <div class="flex flex-wrap gap-6 pt-4">
                            <a
                                href="https://calendly.com/niralepandya/book-your-slot-ek-soch-with-nirale-pandya-clone?back=1&month=2026-02"
                                class="btn-primary">Apply Now</a
                            >
                        </div>
                    </div>

                    <div class="relative">
                        <div
                            class="aspect-square bg-gold rounded-full opacity-10 absolute -top-10 -right-10 blur-3xl w-64 h-64 anim-pulse"
                        >
                        </div>
                        <div
                            class="relative p-10 bg-charcoal rounded-3xl border border-soft-grey/10 shadow-2xl"
                        >
                            <Mic class="w-16 h-16 text-gold mb-8 opacity-50" />
                            <div class="space-y-6">
                                <div class="flex items-start gap-4">
                                    <div
                                        class="w-1.5 h-1.5 bg-gold rounded-full mt-2"
                                    >
                                    </div>
                                    <p class="text-off-white">
                                        Reach an audience of thousands across
                                        India
                                    </p>
                                </div>
                                <div class="flex items-start gap-4">
                                    <div
                                        class="w-1.5 h-1.5 bg-gold rounded-full mt-2"
                                    >
                                    </div>
                                    <p class="text-off-white">
                                        Professional studio quality recording &
                                        editing
                                    </p>
                                </div>
                                <div class="flex items-start gap-4">
                                    <div
                                        class="w-1.5 h-1.5 bg-gold rounded-full mt-2"
                                    >
                                    </div>
                                    <p class="text-off-white">
                                        Distributed on all major podcast
                                        platforms
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const gsap = (window as any).gsap;
        const ScrollTrigger = (window as any).ScrollTrigger;

        if (!gsap) return;

        // Hero animations
        gsap.fromTo(
            ".fade-up",
            { y: 30, opacity: 0 },
            {
                y: 0,
                opacity: 1,
                duration: 0.8,
                stagger: 0.15,
                ease: "power3.out",
                delay: 0.3,
            },
        );
    });
</script>

<style>
    .episode-card:hover {
        transform: translateY(-5px);
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
            opacity: 0.1;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.15;
        }
    }

    .anim-pulse {
        animation: pulse 4s infinite ease-in-out;
    }
</style>
