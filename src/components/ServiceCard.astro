---
interface Props {
  imageSrc: string;
  title: string;
  link?: string;
  index?: number;
}

const {
  imageSrc,
  title,
  link = "#",
  index = 0
} = Astro.props;
---

<a href={link} class="service-card group block relative overflow-hidden rounded" data-index={index}>
  <div class="aspect-[4/5] overflow-hidden">
    <img 
      src={imageSrc} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105"
      loading="lazy"
    />
  </div>
  
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-t from-deep-black via-deep-black/20 to-transparent"></div>
  
  <!-- Content -->
  <div class="absolute inset-0 flex flex-col justify-end p-6">
    <h3 class="text-2xl md:text-3xl font-serif text-off-white group-hover:text-gold transition-colors duration-300">
      {title}
    </h3>
    <div class="mt-3 flex items-center gap-2 text-soft-grey group-hover:text-off-white transition-colors">
      <span class="text-sm uppercase tracking-widest">Explore</span>
      <svg class="w-4 h-4 transform group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>
  </div>
  
  <!-- Top accent line -->
  <div class="absolute top-0 left-0 w-0 h-1 bg-gold transition-all duration-500 ease-out group-hover:w-full"></div>
</a>

<style>
  .service-card {
    transform: translateY(0);
    transition: transform 0.3s ease;
  }
  
  .service-card:hover {
    transform: translateY(-8px);
  }
</style>
