---
import { Play } from 'lucide-astro';

interface Props {
  label?: string;
  title: string;
  description?: string;
  embedUrl?: string;
  thumbnailSrc?: string;
}

const {
  label = "Latest Episode",
  title = "The Power of Mindful Living",
  description = "Explore the transformative journey of conscious living and discover how small daily practices can lead to profound changes in your life.",
  embedUrl,
  thumbnailSrc = "https://images.unsplash.com/photo-1590602847861-f357a9332bbc?w=1200&q=80"
} = Astro.props;
---

<section id="episodes" class="section bg-deep-black">
  <div class="container">
    <div class="featured-episode-wrapper">
      <!-- Label -->
      <div class="mb-8">
        <span class="inline-block px-4 py-2 bg-gold/10 text-gold text-xs font-semibold uppercase tracking-widest rounded">
          {label}
        </span>
      </div>
      
      <!-- Content Grid -->
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Player/Thumbnail -->
        <div class="episode-visual relative">
          <div class="relative aspect-video overflow-hidden rounded bg-charcoal">
            {embedUrl ? (
              <iframe
                src={embedUrl}
                class="absolute inset-0 w-full h-full"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            ) : (
              <>
                <img 
                  src={thumbnailSrc} 
                  alt={title}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <!-- Play Button Overlay -->
                <div class="absolute inset-0 flex items-center justify-center bg-deep-black/40">
                  <button class="play-button group relative w-20 h-20 flex items-center justify-center bg-gold rounded-full hover:scale-110 transition-transform duration-300">
                    <Play class="w-8 h-8 text-deep-black ml-1" />
                    <!-- Pulse ring -->
                    <span class="absolute inset-0 rounded-full border-2 border-gold animate-ping opacity-30"></span>
                  </button>
                </div>
              </>
            )}
          </div>
          
          <!-- Decorative line -->
          <div class="absolute -bottom-4 left-0 w-1/3 h-px bg-gradient-to-r from-gold to-transparent"></div>
        </div>
        
        <!-- Episode Info -->
        <div class="episode-content space-y-6">
          <h3 class="text-3xl md:text-4xl font-serif text-off-white leading-tight">
            {title}
          </h3>
          <p class="text-soft-grey text-lg leading-relaxed">
            {description}
          </p>
          <div class="flex flex-wrap gap-4 pt-4">
            <a href="https://youtu.be/__1ncK_wfWk?si=BpC4c-5pn28K3mCz" class="btn-primary">
              Play Now
            </a>
            <a href="https://www.youtube.com/@niralepandya" class="btn-outline">
              All Episodes
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const gsap = (window as any).gsap;
    const ScrollTrigger = (window as any).ScrollTrigger;
    
    if (!gsap) return;

    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: '.featured-episode-wrapper',
        start: 'top 80%',
        toggleActions: 'play none none reverse'
      }
    });

    tl.fromTo('.episode-visual',
      { x: -50, opacity: 0 },
      { x: 0, opacity: 1, duration: 0.8, ease: 'power3.out' }
    )
    .fromTo('.episode-content',
      { x: 50, opacity: 0 },
      { x: 0, opacity: 1, duration: 0.8, ease: 'power3.out' },
      '-=0.5'
    );
  });
</script>
